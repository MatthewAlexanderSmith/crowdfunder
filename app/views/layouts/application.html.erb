<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="nav">
  <% if current_user && !current_page?(user_path(current_user.id)) %>
    <%= link_to "User Page", user_path(current_user.id) %>
  <% end %>
  <% if current_user %>
      <%= link_to "Logout", :logout, method: :post %>
  <% else %>
      <%= link_to "Register", new_user_path %> |
      <%= link_to "Login", :login %>
  <% end %>

</div>
<div>
  <p id="alert"><%= flash[:alert] %></p>
  <p id="alert"><%= flash[:notice] %></p>
</div>


<%= yield %>


  <footer>
    <% unless current_page?('/projects') %>
      <%= link_to "Back to Project List", projects_path %> |
    <% end %>
    <% unless current_page?('/tags') %>
      <%= link_to "Tags", tags_path %><br>
    <% end %>
    2016 - Mike Bowman, Steve O'Neil, Patrick Cruikshank, Matthew Smith &copy;
  </footer>
</body>
</html>
