<div class="nested-fields">
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>

  <div class="field">
    <%= f.label :number_available %>
    <%= f.number_field :number_available %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :reward_image %>
    <%= f.file_field :reward_image %>
  </div>
  <%= link_to_remove_association "Remove Reward", f %>
</div>
