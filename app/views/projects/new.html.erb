<h1>Create a New Project</h1>

<%= form_for @project do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>

  <div class="field">
    <%= f.label :funding_goal %>
    <%= f.number_field :funding_goal %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :image %>
    <%= f.file_field :image %>
  <div>

  <h3>Rewards</h3>
    <div id="rewards">
      <%= f.fields_for :rewards do |reward_fields| %>
        <%= render "reward_fields", f: reward_fields %>

        <div class="links">
          <%= link_to_add_association "Add another reward", f, :rewards %>
        </div>

      <% end %>
    </div>

  <div class="action">
    <%= f.submit "Create New Project" %>
  </div>

<% end %>
