

<div class="show-pledges">
  <h4>Current Pledges for <%= @project.name %></h4>
  <% if @project.pledges.any? %>
    <ul>
    <% @project.pledges.each do |pledge| %>
      <li><%= "Backer: " + pledge.backer.first_name + " " + pledge.backer.last_name + " - $" + pledge.amount.to_s %></li>
    <% end %>
    </ul>
  <% else %>
    <p>No Pledges yet!</p>
  <% end %>
</div>
