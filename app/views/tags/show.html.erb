<h1><%= @tag.name %></h1>

<%= link_to "Edit tag", edit_tag_path(@tag) %>

<h3>Items tagged as <i><%= @tag.name %></i>...</h3>

<div class="display-tagged-projects">
  <% if @tag.projects.any? %>
    <%= render @projects %>
  <% else %>
    <p>No projects...</p>
  <% end %>
</div>

<%= paginate @projects %>
