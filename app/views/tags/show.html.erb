<h1><%= @tag.name %></h1>

<%= link_to "Edit tag", edit_tag_path(@tag) %>

<h3>Items tagged as <i><%= @tag.name %></i>...</h3>
<% if @tag.projects.any? %>
  <% @tag.projects.each do |project| %>
    <li><%= link_to "#{project.name}", project_path(project) %></li>
  <% end %><br>
<% else %>
  <p>No projects tagged as <i><%= @tag.name %></i> yet...</p>
<% end %>
